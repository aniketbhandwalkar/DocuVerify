{
  "name": "document-verification-server",
  "version": "1.0.0",
  "description": "Backend server for Document Verification System",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "test": "jest",
    "build": "npm run install:all && npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "cd server && npm install",
    "build:ai-ml": "cd ai-ml-service && pip install -r requirements.txt",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start:ai-ml": "cd ai-ml-service && uvicorn app:app --host 0.0.0.0 --port 8000",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../ai-ml-service && pip install -r requirements.txt",
    "railway:build": "npm run install:all && npm run build:client",
    "railway:start": "npm start"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.3.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "document",
    "verification",
    "ai",
    "ml",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT"
}